// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 42, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)

  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": [
    "tray",
    "idle_inhibitor",
    "network",
    "pulseaudio",
    "bluetooth",
    "clock",
    // "backlight/slider",
    "battery",
    "custom/power",
  ],

  "hyprland/window": {
    "format": "{initialTitle} - {title}",
    "max-length": 40,
    "icon": true,
    "icon-size": 20,
  },

  "mpris": {
    "format": "{player_icon}  {dynamic}",
    "format-paused": "{status_icon}  <i>{dynamic}</i>",
    "player-icons": {
      // "default": "ÔÅã",
      "default": "ÔÖÑ",
      // "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "Ôäã"
    },
    "dynamic-order": ["title", "artist", "position", "length"],
    "dynamic-len": 60,
    "interval": 1
    
    // "ignored-players": ["firefox"]
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip-format-activated": "Idle Inhibitor: {status}" ,
    "tooltip-format-deactivated": "Idle Inhibitor: {status}" ,
    "format-icons": {
      "activated": "Û∞í≥ ",
      "deactivated": "Û∞í≤ "
    }
  },

  "network": {
    "format-wifi": "Ôá´  [{essid}] ({signalStrength}%)",
    "format-ethernet": "ÔÉÅ  [{essid}] ({signalStrength}%)",
    "format-disconnected": "Û∞ñ™ ",
    "tooltip-format": "Configure network - {essid} (nmtui)",
    "max-length": 50,
    "on-click": "ghostty -e nmtui",
  },

  "pulseaudio": {
    "tooltip-format": "Configure outputs (pavucontrol)",
    "scroll-step": 5,
    "reverse-scrolling": true,
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{icon}Ôäî {volume}%  {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Óª®  {volume}%",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ±",
    // "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click": "pavucontrol",
    "format-icons": {
      // "headphone": "ÔÄ•",
      // "hands-free": "ÔÄ•",
      // "headset": "ÔÄ•",
      // one icon for every 5% step
      // "default": ["Óª®", "ÔÄ¶", "ÔÄß", "ÔÄß", "ÔÄß", "ÔÄß", "ÔÄß", "ÔÄß", "ÔÄß", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®", "ÔÄ®"],
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
  },

  "bluetooth": {
    "format": "Û∞Ç≤",
    "format-on": "{icon} On",
    "format-off": "{icon} Off",
    "format-connected": "{icon} On",
    "format-icons": {
      "on": "Û∞ÇØ",
      "off": "Û∞Ç≤",
      "connected": "Û∞Ç±",
    },
    "on-click": "blueman-manager",
    "tooltip-format": "Configure devices (blueman-manager)",
    "tooltip-format-connected": "Configure devices (blueman-manager) {device_enumerate}",
  },

  "clock": {
    // "format": "ÔÄó {:%H:%M} ÔÅ≥ {:%d/%m/%Y}",
    "format": "ÔÄó {:%H:%M ÔÅ≥ %d/%m/%Y}",
    //"tooltip-format": "<tt><small>{calendar}</small></tt>",
    "tooltip-format": "<tt>{calendar}</tt>",
    // "format-alt": "",
    "calendar": {
      "mode": "month",
      "format": {
        "months": "<span font-size='medium' color='#c0caf5'><b><u>{}</u></b></span>",
        "days": "<span color='#c0caf5'><b>{}</b></span>",
        "weeks": "<span color='#c0caf5'><b>W{}</b></span>",
        "weekdays": "<span color='#c0caf5'><b>{}</b></span>",
        "today": "<span color='#4472bd'><b><u>{}</u></b></span>",
      },
    },
  },

  // "backlight/slider": {
  //   "min": 0,
  //   "max": 100,
  //   "orientation": "horizontal",
  //   "device": "intel_backlight"
  // }, 

  "battery": {
    //"interval": 5,
    "align": 0,
    "rotate": 0,
    //"bat": "BAT1",
    //"adapter": "ACAD",
    "full-at": 100,
    "design-capacity": false,
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ÔÉß {capacity}%",
    "format-plugged": "Û±òñ {capacity}%",
    // "format-alt-click": "click",
    "format-full": "{icon} Full",
    // "format-alt": "{icon} {time}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "format-time": "{H}h {M}min",
    "tooltip": true,
    "tooltip-format": "{timeTo} {power}w",
    // "on-click-middle": "$HOME/.config/hypr/scripts/ChangeBlur.sh",
    // "on-click-right": "$HOME/.config/hypr/scripts/Wlogout.sh",
  },

  "custom/power": {
    "format": "‚èª",
    "tooltip-format": "Power menu",
    "on-click": "wlogout --protocol layer-shell",
  },
}
 
