@define-color bg #1a1b26;
@define-color bg_dark #16161e;
@define-color bg_light #e1e2e7;
@define-color text #c0caf5;
@define-color text_light #16161e;

@define-color purple #7847bd;

@define-color arch #1793d1;
@define-color arch-hover #0a72a6;


* {
    border: none;
    border-radius: 10px;
    font-family: "JetBrainsMono Nerd Font";
    font-size: 14px;
    min-height: 10px;
    transition: background-color 0.3s ease-out;
}

window#waybar {
    transition: background-color 0.5s;
    background: rgba(0, 0, 0, 0);
}

.modules-left,
.modules-center,
.modules-right {
    margin: 8px 5px;
    padding: 0px 5px;
    border-radius: 15px;
}

.modules-left {
    padding: 0px;
}

.modules-right {
    padding: 0px;
}

.modules-center {
    padding: 0px 10px;
}

tooltip {
    background: @bg;
    /* opacity: 0.5; */
    color: @text;
    font-family: "JetBrainsMono Nerd Font";
    font-weight: 600;
}

.modules-left,
.modules-center,
.modules-right {
}

#clock,
#pulseaudio,
#bluetooth,
#custom-power,
#window,
#network,
#battery,
#tray,
#idle_inhibitor,
#backlight-slider,
#mpris,
#custom-updates,
#custom-arch,
#custom-notifications {
    padding: 0px 10px;
    background: @bg;
    /* opacity: 0.5; */
    color: @text;
    font-family: "JetBrainsMono Nerd Font";
    font-weight: 600;
    border: none;
    border-radius: 15px;
}

