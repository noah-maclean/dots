#clock:hover,
#pulseaudio:hover,
#bluetooth:hover,
#custom-power:hover,
#window:hover,
#network:hover,
#battery:hover,
#tray:hover,
#idle_inhibitor:hover,
#backlight-slider:hover,
#mpris:hover,
#custom-updates:hover,
#custom-arch:hover,
#custom-notifications:hover {
    background: @bg_dark;
    color: @text;
}

#custom-power {
    font-size: 18px;
    padding: 0px 10px 0px 6px;
}

#custom-arch {
    font-size: 22px;
    color: white;
    padding: 0px 11px 0px 6px;
    background: @arch;
}

#custom-arch:hover {
    background: @arch_hover
}

#workspaces button {
    /* background: transparent; */
    background: @bg;
    color: @text;
    font-family: "JetBrainsMono Nerd Font";
    font-weight: 600;
    border: none;
    border-radius: 15px;
    padding: 0px 8px;
    margin: 0px 1px;
}

#workspaces button.active {
    background: @bg_light;
    color: @text_light;
}

